<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="21" id="com.maintenance.symtac" ios-CFBundleVersion="1.2.0" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CIRT Systems</name>
    <description>
        CIRT Systems App
    </description>
    <author email="dominicus_hubert@hotmail.com" href="">
        Hubert Yap
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashScreen" value="none" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="../HookMaster/icon_splash_generate.js" type="after_platform_add" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="CIRT Systems requires your permission to access your camera." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="CIRT Systems requires your permission to access your photo library." />
    </plugin>
    <plugin name="cordova-plugin-dialogs" spec="~1.2.0" />
</widget>
